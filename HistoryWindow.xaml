<Window x:Class="translation.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:translation"
        mc:Ignorable="d"
        Title="翻译历史记录" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="HistoryListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="原文" Width="200" DisplayMemberBinding="{Binding OriginalText}"/>
                    <GridViewColumn Header="译文" Width="200" DisplayMemberBinding="{Binding TranslatedText}"/>
                    <GridViewColumn Header="时间" Width="150" DisplayMemberBinding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>