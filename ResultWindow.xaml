<Window x:Class="translation.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ResultWindow" Height="150" Width="400"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" 
        >

    <!-- 核心修正(1): 在根 Border 元素上添加鼠标事件，用于拖动窗口 -->
    <Border x:Name="RootBorder" Background="#DD000000" CornerRadius="5" Padding="10" Margin="15"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <!-- 
            核心修正(2): 将 TextBlock 替换为一个样式化的 TextBox。
            TextBox 天然支持文本选择和复制。
        -->
        <TextBox x:Name="ResultTextBox"
                 Text="这是一个示例文本..."
                 Foreground="White"
                 FontSize="16"
                 TextWrapping="Wrap"
                 MaxWidth="500"
                 IsReadOnly="True"
                 BorderThickness="0"
                 Background="Transparent"
                 CaretBrush="White" 
                 SelectionBrush="CornflowerBlue"/>
    </Border>
</Window>