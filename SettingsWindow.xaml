<Window x:Class="translation.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="设置" Height="220" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="百度翻译 App ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="AppIdTextBox" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Padding="2"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="百度翻译 Secret Key:" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <TextBox x:Name="SecretKeyTextBox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,0" Padding="2"/>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="0,15,0,0" TextWrapping="Wrap" Foreground="Gray">
            请前往百度翻译开放平台申请您的个人密钥。
        </TextBlock>

        <Button Grid.Row="4" Grid.Column="1" Content="保存" HorizontalAlignment="Right" Width="80" Padding="5" Click="SaveButton_Click"/>
    </Grid>
</Window>